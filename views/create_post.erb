<div class="center-horizontal">
  <div class="create-container">
    <h1>сЃЋсѓДсѓ╣ТїЂсЂАуЅЕсЃфсѓ╣сЃѕсѓњТіЋуе┐сЂЌсѓѕсЂє</h1>
    
    <section class="section-box item-preview">
      <h2>уЈЙтюесЂ«ТїЂсЂАуЅЕсЃфсѓ╣сЃѕ</h2>
      <% if @items.any? %>
        <div class="item-grid">
          <% @items.each_with_index do |item, index| %>
            <div class="item-card">
              <div class="item-name"><%= item["name"] %></div>
              <div class="item-info">
                <span><%= item["amount"] %>тђІ</span> |
                <span><%= item["detail"] %></span>
              </div>
              <form action="/delete_item/<%= index %>" method="POST" class="delete-inline-form">
                <button type="submit" class="delete-inline-button">тЅіжЎц</button>
              </form>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="warning-text">Рђ╗ сЂЙсЂасѓбсѓцсЃєсЃасЂїУ┐йтіасЂЋсѓїсЂдсЂёсЂЙсЂЏсѓЊ</p>
      <% end %>
    </section>
    
    <section class="section-box item-form">
      <h3>сѓбсѓцсЃєсЃасѓњУ┐йтіа</h3>
      <form action="/add_item" method="POST" class="standard-form">
        <input type="text" name="name" placeholder="сѓбсѓцсЃєсЃатљЇ№╝ѕСЙІ№╝џсѓ┐сѓфсЃФ№╝Ѕ" required>
        <input type="number" name="amount" placeholder="тђІТЋ░№╝ѕСЙІ№╝џ1№╝Ѕ" required>
        <input type="text" name="detail" placeholder="УЕ│у┤░№╝ѕСЙІ№╝џТ▒ЌТІГсЂЇуће№╝Ѕ">
        <input type="submit" value="сѓбсѓцсЃєсЃасѓњУ┐йтіасЂЎсѓІ">
      </form>
    </section>
    
    <section class="section-box post-form">
      <h3>ТіЋуе┐тєЁт«╣сѓњтЁЦтіЏ</h3>
      <p class="note-text">
        <%= @items.any? ? "сѓбсѓцсЃєсЃасЂїУ┐йтіасЂЋсѓїсЂЙсЂЌсЂЪ№╝ЂТіЋуе┐сЂДсЂЇсЂЙсЂЎ ­ЪјЅ" : "Рђ╗ сѓбсѓцсЃєсЃасЂї1сЂцС╗ЦСИіУ┐йтіасЂЋсѓїсѓІсЂеТіЋуе┐сЂДсЂЇсЂЙсЂЎ" %>
      </p>
      <form action="/post_content" method="POST" class="standard-form">
        <input type="text" name="title" placeholder="ТіЋуе┐сЂ«сѓ┐сѓцсЃѕсЃФ№╝ѕСЙІ№╝џсЃГсЃЃсѓ»сЃЋсѓДсѓ╣уће№╝Ѕ" required>
        <input type="text" name="detail" placeholder="ТіЋуе┐сЂ«УЕ│у┤░№╝ѕСЙІ№╝џ2Т│і3ТЌЦсЂ«Т║ќтѓЎ№╝Ѕ">
        <input type="submit" value="сЂЊсЂ«тєЁт«╣сЂДТіЋуе┐сЂЎсѓІ" <% unless @items.any? %>disabled style="opacity:0.5; cursor:not-allowed;"<% end %>>
      </form>
    </section>
  </div>
</div>