<div class="center-horizontal">
  <div class="center-vertical">
    <h1>投稿作成</h1>

    <h2>追加されたアイテム一覧</h2>
    <% if @items.any? %>
      <ul>
        <% @items.each do |item| %>
          <li>
            <%= item["name"] %>（<%= item["amount"] %>個）詳細：<%= item["detail"] %>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p>まだアイテムは追加されていません。</p>
    <% end %>

    <hr>

    <form action="/add_item" method="POST">
      <h3>アイテムを追加</h3>
      <input type="text" name="name" placeholder="アイテム名" required>
      <input type="number" name="amount" placeholder="個数" required>
      <input type="text" name="detail" placeholder="詳細">
      <input type="submit" value="追加">
    </form>

    <hr>

    <form action="/post_content" method="POST">
      <h3>投稿の情報を入力</h3>
      <input type="text" name="title" placeholder="タイトル" required>
      <input type="text" name="detail" placeholder="投稿の詳細">
      <input type="submit" value="投稿を確定">
    </form>
  </div>
</div>